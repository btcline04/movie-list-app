<div class="card-deck">
  <% @lists.each do |l|%>
    <div class="card">
      <img src="https://lajoyalink.com/wp-content/uploads/2018/03/Movie.jpg" alt="filler image" class="card-img-top">
        <div class="card-body text-center">
          <%= link_to l do %>
            <h5 class="card-title"><%= l.name %></h5>
          <% end %>
          <p>Movies in list: <%= l.movies.count %></p>
          Average Rating: <% l.average_rating.to_i.ceil.times do %>
          <span><%= fa_icon "star" %></span>
          <% end %>
        </div>
    </div>
  <% end %>
</div> 